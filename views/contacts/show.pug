extends ../layout

block content
  h1 Contact Details
  if errorMessage
    p.error-message= errorMessage

  div.card
    div.card-body
      h5.card-title Contact Information
      p.card-text
        strong First Name:
        | #{contact.firstName}
      p.card-text
        strong Last Name:
        | #{contact.lastName}
      p.card-text
        strong Email Address:
        | #{contact.emailAddress}
      p.card-text
        strong Notes:
        | #{contact.notes}

    div.card-footer
      p.card-text
        strong Date Created/Modified:
        | #{contact.createdAt instanceof Date ? contact.createdAt.toISOString() : 'N/A'}
        | / 
        | #{contact.updatedAt instanceof Date ? contact.updatedAt.toISOString() : 'N/A'}

  a.btn.btn-primary(href='/contacts') Back to All Contacts


